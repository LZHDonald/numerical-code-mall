<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>网上购物系统</title>
    <link rel="stylesheet" href="/bootstrap-3.3.4/dist/css/bootstrap.min.css">
    <style>

        .container {
            background: cornsilk;
        }

        .row {
            margin-left: 20px;
            margin-right: 20px;;
        }

        .center {
            text-align: center;
        }

        /*    cart*/
        /*.container {
            background: cornsilk;
            padding: 20px 20px 50px;
        }*/
        img {
            width: 100%;
        }

        .btn-info {
            width: 120px;
            margin-left: 30px;
        }

        table.table-info tr td {
            font-size: 16px;
            height: 35px;
            line-height: 35px;
        }

        table.table tr td:first-child {
            text-align: right;
        }

        table.table tr td:last-child {
            text-indent: 30px;
        }

        .radio-row {
            display: inline-block;
            width: 50px;
            height: 30px;
            margin-right: 20px;
            position: relative;
        }

        .radio-row input, .radio-row input + a {
            display: inline-block;
            width: 50px;
            height: 30px;
            position: absolute;
            top: 0;
            left: 0;
            text-indent: 0;
            font-size: 14px;
            text-align: center;
            line-height: 30px;
            color: #0e0e0e;
        }

        .radio-row input {
            z-index: 10000;
            opacity: 0;
        }

        .radio-row input + a {
            border: 1px solid #ddd;
        }

        .radio-row input:checked + a {
            border: 1px solid #c63205;
            color: #c63205;
        }

        .panel-body img {
            width: 70px;
            height: 70px;
            margin-right: 20px;
        }
    </style>
</head>
<body>
<!--顶部导航-->
<!-- Static navbar -->
<div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">商城</span>
            </button>
            <a class="navbar-brand" href="/user/index">数码商城</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="/user/index">首页</a></li>
                <li><a href="/user/order">我的订单</a></li>
                <li><a href="/user/userinfo">个人中心</a></li>
                <li><a href="/user/collectGoods">商品收藏</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right hidden-sm">
                <%
                if (user){
                %>
                    <li><a href="/user/login/logout">退出</a></li>
                <%
                }
                else {
                %>
                    <li><a href="/user/login">登录</a></li>
                <%
                }
                %>
                <li><a href="/user/register">注册</a></li>
                <li>
                    <a href="/user/cart"><span class="glyphicon glyphicon-shopping-cart">购物车</span></a></li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>
<!--主体内容-->
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <!--            <img src="/images/5.jpg" alt="">-->
            <img src="<%= commodity["g_photo"] %>" alt="">
        </div>
        <div class="col-md-8">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab"
                                                          data-toggle="tab">商品详情</a></li>
                <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">商品参数</a>
                </li>
                <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">评价</a>
                </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home">
                    <table class="table table-info">
                        <tbody>
                        <tr>
                            <td class="col-xs-2">品牌名称</td>
                            <!--                            <td class="col-xs-10">花花公子休闲修身夏季男士V领半袖打底衫莱卡纯棉韩版体恤</td>-->
                            <td class="col-xs-10"><%= commodity["g_name"] %></td>
                        </tr>
                        <tr>
                            <td>价格</td>
                            <td><%= commodity["g_price"] %></td>
                        </tr>
                        <tr>
                            <td>优惠</td>
                            <td><%= commodity["g_discounts"] %>折</td>
                        </tr>
                        <tr>
                            <td>颜色</td>
                            <td>
                                <div class="radio-row">
                                    <input type="radio" name="color" value="">
                                    <a href="javascript:void(0);">橙色</a>
                                </div>
                                <div class="radio-row">
                                    <input type="radio" name="color" value="">
                                    <a href="javascript:void(0);">蓝色</a>
                                </div>
                                <div class="radio-row">
                                    <input type="radio" name="color" value="">
                                    <a href="javascript:void(0);">红色</a>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>尺码</td>
                            <td>
                                <div class="radio-row">
                                    <input type="radio" name="size" value="">
                                    <a href="javascript:void(0);">小</a>
                                </div>
                                <div class="radio-row">
                                    <input type="radio" name="size" value="">
                                    <a href="javascript:void(0);">中</a>
                                </div>
                                <div class="radio-row">
                                    <input type="radio" name="size" value="">
                                    <a href="javascript:void(0);">大</a>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align: left;text-indent: 40px">
                                <button type="button" class="btn btn-info"
                                        onclick="javascript:window.location.href='/user/order/nowBuy/<%= commodity["g_id"] %>';">
                                    购买
                                </button>
                                <button type="button" class="btn btn-info"
                                        onclick="addShoppingCart(<%= commodity['g_id'] %>)">加入购物车
                                </button>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="profile">
                    <table class="table table-hover table-param">
                        <tbody>
                        <tr>
                            <td class="col-xs-3 ">商品名称</td>
                            <td class="col-xs-9 "><%= commodity["g_name"] %></td>
                        </tr>
                        <tr>
                            <td>价格</td>
                            <td><%= commodity["g_price"] %></td>
                        </tr>
                        <tr>
                            <td>剩余库存</td>
                            <td><%= commodity["g_quantity"] %></td>
                        </tr>
                        <tr>
                            <td>打折优惠</td>
                            <td><%= commodity["g_discounts"] %></td>
                        </tr>
                        <tr>
                            <td>分类</td>
                            <td><%= commodity["g_category"] %></td>
                        </tr>
                        <tr>
                            <td>商品详细描述</td>
                            <td><%= commodity["g_description"] %></td>
                        </tr>

                        </tbody>
                    </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="messages">
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        <%
                        if (estimate.length == 0){
                        %>
                            暂无评价
                        <%
                        }
                        %>
                        <%
                        for (var i = 0; i < estimate.length; i++) {
                        %>
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingOne">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion"
                                           href="#collapseOne"
                                           aria-expanded="true" aria-controls="collapseOne">
                                            第<%= i + 1 %>条
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel"
                                     aria-labelledby="headingOne">
                                    <div class="panel-body">
                                        <img src="<%= commodity["g_photo"] %>" alt=""><%= estimate[i]["e_estimate"] %>
                                    </div>
                                </div>
                            </div>
                        <%
                        }
                        %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script src="/jquery/jquery-1.11.0.min.js"></script>
<script src="/bootstrap-3.3.4/dist/js/bootstrap.min.js"></script>
<script type="text/javascript">
    $("#top-part").load("top-part.html");
    $("#search-part").load("search-part.html");
</script>
<script>
    function addShoppingCart(commodityId) {

        $.get("/user/cart/addShoppingCart/" + commodityId, function (result) {
            if (result === "未登录") {
                alert("未登录")
                window.location.href = "/user/login";
                return;
            }
            alert(result);
        });

    }
</script>
</html>
